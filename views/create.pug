extends ./layout 

block content 
    .row.justify-content-center
        .col-md-6
            include ./alert
            
            .card 
                .card-body 
                    h5.mb-4 Create Record 

                    form(action="/create", method="post") 
                        .mb-3
                            label.form-label(for="name") Name
                            input.form-control#name(type="text" name="name" autofocus required)

                        .mb-3
                            label.form-label(for="email") Email Address
                            input.form-control#email(type="email" name="email" required)

                        .mb-3
                            label.form-label(for="bio") Biography
                            textarea.form-control#bio(type="text" name="bio" required)

                        button.btn.btn-primary(type="submit") Create

                    
